<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/wrapper_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="#150D0C">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/poster_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/poster_chat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Игра престолов"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/messageChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Иван:Смотрели......"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>