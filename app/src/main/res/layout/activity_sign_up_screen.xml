<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#150D0B"
    android:orientation="vertical"
    tools:context=".SignUpScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/splash_screen"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <EditText
            android:id="@+id/personName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit"
            android:hint="Имя"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="15dp"
            android:textColorHint="#afafaf"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/personSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit"
            android:ems="10"
            android:hint="Фамилия"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:padding="15dp"
            android:textColorHint="#afafaf"
            android:layout_marginBottom="15dp"
            />

        <EditText
            android:id="@+id/personEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="15dp"
            android:textColorHint="#afafaf"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit"
            android:ems="10"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:padding="15dp"
            android:textColorHint="#afafaf"
            android:layout_marginBottom="15dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/textPasswordRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit"
            android:ems="10"
            android:hint="Повторите пароль"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="15dp"
            android:textColorHint="#afafaf"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style_sign"
            android:fontFamily="@font/roboto_dark"
            android:text="Зарегистрироваться"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"
            android:text="У меня уже есть аккаунт"
            android:textColor="@color/orange" />
    </LinearLayout>
</LinearLayout>